{{>header}}

<!-- Details  -->

{{#with destination}}

<section id="viewdestinationDetails">
    <div class="destination-area">
        <div class="destination-area-left">
            <img src="{{imgUrl}}" alt="">
        </div>
        <div class="destination-area-right">
            <h3>{{name}}</h3>
            <div>to {{city}}</div>
            <div class="data-and-time">
                {{departure}}
                <a href="#/edit/{{objectId}}" class="edit-destination-detail"></a>
            </div>
            <div>
                {{duration}} days
            </div>
        </div>
    </div>
</section>

{{/with}}

